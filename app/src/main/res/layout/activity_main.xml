<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yc.library.TagFlowLayout
        android:id="@+id/flow_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:alignContent="flex_start"
        app:alignItems="center"
        app:defaultDrawable="@drawable/bg_unselect"
        app:defaultTextColor="@color/c3262DE"
        app:dividerDrawable="@drawable/bg_divider"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="flex_start"
        app:mode="SINGLE"
        app:selectDrawable="@drawable/bg_selected"
        app:selectTextColor="@android:color/white"
        app:showDivider="beginning|middle|end" />

    <Button
        android:id="@+id/change_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="变换数据" />

</LinearLayout>